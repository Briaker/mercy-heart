.recentCauses
    position relative
    
.recentCausesWrapper
    ulReset()
    display flex
    overflow hidden
    flex-direction column

.recentCausesNav
    flexCenter()
    li
        padding 1rem 2rem

.causesWrapper
    flexCenter()
    flex-wrap no-wrap
    
.causesSliderContainer
    width 100%
    position relative
    
.gallerySliderContainer
    width 100%
    max-height 100%
    position relative
    .swiper-slide
        max-height 250px

.sliderPrev, .sliderNext
    position absolute
    top 50%
    transform translateY(-50%)
    z-index 10
    width 40px
    height 40px
    cursor pointer
    background-size cover
    background-position center center

.causesPrev
    left 4rem
    background url("../images/arrow-left-big-dark.png")
    
.causesNext
    right 4rem
    background url("../images/arrow-right-big-dark.png")

.galleryPrev
    left 4rem
    background url("../images/arrow-left-big.png")
    
.galleryNext
    right 4rem
    background url("../images/arrow-right-big.png")

.causeWrapper
    background-color $brandPrimaryDark

    .subTitle
        color #989898
        
    .causeTitle
        font-weight 600
        font-size $bigHeader
        text-transform none
        color $brandPrimaryLight
        padding 2rem 0
        padding-top 90%
        
    &.water
        background url("../images/donate/water.jpg")
    &.adopt
        background url("../images/donate/adopt.jpg")
    &.hunger
        background url("../images/donate/hunger.jpg")
        
    &.water, &.adopt, &.hunger
        background-size 120%
        background-position center top
    
.progressBottom
    flexCenter()
    flex-direction column
    background-color $brandPrimaryLight
    border 1px solid $brandNeutral
    border-top 0

.progressBarWrapper
    background-color $brandNeutral
    height 10px
    patternOverlay("../images/stripes-pattern.png", opac = 0.3)

.progressBar
    position absolute
    background-color $brandAccent
    top 0
    left 0
    bottom 0
    width 30%
    transition width 0.4s ease-in-out
        
.countWrapper
    flexCenter()
    .count
        flexCenter()
        flex-direction column
        p
            text-transform uppercase
            font-weight 100
            margin 0
        h3
            text-transform lowercase
            color $brandPrimaryDark
            font-family $openSans
            font-weight 900
            
        .number
            font-size $largerHeader
            
.countOf
    padding 0.75rem
    font-weight 100
    font-family $georgia
    font-style italic
    font-size 1.4rem
    line-height 1rem
    margin-top 0
    margin 0 1rem
    height 100%
    background linear-gradient(115deg, #FFFFFF 0, #FFFFFF 39px, $brandNeutral 40px, #FFFFFF 41px, #FFFFFF 50px)
    background-color goldenrod
    p
        margin 1rem 0