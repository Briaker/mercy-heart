html
    font-family $openSans
    color $brandPrimaryLight
    
body
    background darkgray 
    
    
// ===================================================
// =                REPEATABLE CLASSES               =
// ===================================================
    
a
    color $brandPrimaryLight
    text-decoration none    

h1, h2, h3, h4, h5
    color $brandPrimaryLight
    font-family $raleway
    font-weight 200
    text-transform uppercase
    text-align center
    margin 0
    
h1
    font-size $largestHeader

h2
    font-size $largerHeader
    font-weight 500

h3
    font-size $largeHeader
    
h4
    font-size $header
    
strong
    font-weight 800
    
blockquote
    text-align center
    font-size $grandParagraph
    font-weight 100
    
.quote
    position relative
    
    &:before, &:after 
        position absolute
        color $brandAccent
        font-family $pTSans
        font-size 5rem
        
    &:before
        top 0
        content '“'
        left 0
        
    &:after
        top 0
        content '”'
        right 0
img
    width 100%

section
    padding $largeSectionPadding 0
    flexCenter()

.wrapper
    max-width $wrapperWidth
    width 100%
    
.lightSection
    color $brandPrimaryDark

.lightSection 
    background-color $brandPrimaryLight
    h1, h2, h3, h4, h5, p, button, input[type="submit"], input[type="button"]
        color $brandPrimaryDark
    button, input[type="submit"], input[type="button"]
        border 1px solid $brandPrimaryDark
        &:hover
            background-color rgba(175,175,175,0.1)
    a
        color $brandPrimaryDark

a:hover, a:active
    color $brandAccent
    
.subHeading
    font-size $header
    text-transform none

.grandParagraph
    font-size $grandParagraph

.miniParagraph
    font-size $miniParagraph

span.highlight, a.highlight
    color $brandAccent
    
span.thin
    font-weight 100
    
button, input[type="submit"], input[type="button"]
    color $brandPrimaryLight
    background none
    width 170px
    height 40px
    border 1px solid $brandPrimaryLight
    text-transform uppercase
    font-weight 200
    font-family $raleway
    font-size $miniParagraph
    letter-spacing $wideLetters
    margin $smallSectionPadding
    cursor pointer
    transition all 0.2s ease-in-out
    &:hover
        background-color rgba(255,255,255,0.1)
    
.logoWrapper
    flexCenter()
    width 320px
    justify-content space-between
    h2
        font-size 2rem
    img
        width 91px
    :nth-child(2)
        order 2
            
// ===================================================
// =            END OF REPEATABLE CLASSES            =
// ===================================================

// .recentCauses
