nav
    ulReset()
    display flex
    flex-direction column
    width $full

.navTop
    display flex
    flex-direction column
    flex-wrap wrap
    width $full
    ul
        flexCenter()
        justify-content space-around
        padding 0
    .navTopItem
        flexCenter()
        width $third
        &:first-of-type
            justify-content flex-start
            margin-left 2rem
        &:last-of-type
            justify-content flex-end
            margin-right 2rem
        
.menuToggle
    background-color red
    font-size 1rem
    font-weight 100
    width 1.4rem
    height 1.4rem
    cursor pointer
    background url("../images/menu.png")
    background-position center center
    background-size cover
        
.navBottom
    ul
        padding 0
        flexCenter()
        li
            padding 1rem 2rem
            border-left 1px solid $brandPrimaryDark
            text-transform uppercase
            font-size $miniParagraph
            font-weight 100
        li:last-of-type
            border-right 1px solid $brandPrimaryDark
    width $full
    background rgb(50,50,50)