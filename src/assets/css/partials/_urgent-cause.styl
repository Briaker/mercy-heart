.urgentCause
    flexCenter()
    backgroundColorWithImage(rgba(255,255,255,0.85), "../images/hands.jpg")
    position relative
    
    h1
        font-family $openSans
        font-weight 600
        
    strong
        font-weight 900
        
.urgentCause:before
    content ' '
    background linear-gradient(90deg, $gradientLeft, $gradientRight)
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    z-index -10
        
.urgentCauseWrapper
    flexCenter()
    flex-direction column
    
    hr
        border none
        height 1px
        width 100%
        background-color $brandPrimaryLight
        margin 1rem 0 2rem 0
        
    h5
        letter-spacing $wideLetters
        font-size $miniParagraph
        margin 1rem 0
        
    .quote
        max-width 80%
        text-align center

.urgentItems
    flexCenter()
    width 100%
        
.urgentItem
    width 33.3%
    
.urgentLeft h2
    word-spacing 100vw
    text-align right
        
.urgentCenter
    flexCenter()
    position relative
    flex-direction column
    height 300px
    
.urgentRight
    ulReset()
    
    h4
        text-transform none
        text-align left
        
    strong
        font-family $openSans
        
.progressCircle, .loadingCircle
    position relative
    width 200px
    margin 2rem
    
.stOverlayAnimate
    animation fillUp 1s ease forwards
    animation-delay 0.2s
    
.stOverlayAnimateB
    animation stroke-shrink 2s ease infinite
    animation-delay 0.2s
    
.stRed, .stBG, .stDashes, .stOverlay, .stOverlayB
    fill none
    stroke $brandAccent
    stroke-width 10
    stroke-miterlimit 10
    stroke-dasharray 1000, 1000
    stroke-dashoffset 0
    
.stDashes
    stroke lighten($brandAccent, 10)
    stroke-dasharray 12,12
    
.stOverlay
    stroke-width 11
    stroke $brandNeutral

.stBG
    stroke rgba(230,230,230,0.4)
    
.stOverlayB
    stroke-width 11
    stroke #7BD7E5
    stroke-dasharray 1000, 1000
    stroke-dashoffset 0
    
@keyframes fillUp
    to
        stroke-dashoffset 900
        
        
@keyframes stroke-shrink
    0% 
        stroke-dasharray 1,1000
    100% 
        stroke-dasharray 420.25,1000
        stroke-dashoffset -900
        
        // 25% (420.25) = (773 / 4) + 227
        // 50% (613.5) = (773 / 2) + 227
        // 75% (806.75) = (773 / 4) + 227
        // 100% (1000) = (773 / 4) + 227
            
.circular-loader 
    animation rotate 2s linear infinite
    
.loader-path
    stroke-dasharray 150,200
    stroke-dashoffset -10
    stroke-linecap round
    stroke #7BD7E5
    animation dash 1.5s ease-in-out infinite
    
@keyframes dash 
    0% 
        stroke-dasharray 1,200
        stroke-dashoffset 0
      
    50% 
        stroke-dasharray 89,200
        stroke-dashoffset -35
      
    100% 
        stroke-dasharray 89,200
        stroke-dashoffset -124
  
@keyframes rotate
    100% 
        transform rotate(360deg)