.blog
    backgroundGradientWithImage($gradientDark, "../images/blog.jpg")
    h5
        font-family $openSans
        
.blogWrapper
    flexCenter()
    flex-direction column

.postsWrapper
    flexCenter()
    padding-top $smallSectionPadding
    height 500px

.postsWrapperInner
    flexCenter()
    flex-wrap wrap
    justify-content space-between
    align-items space-between
    width $half
    height $full
    
.postsWrapperInner:last-of-type
    margin-left $blogPostMargin
    
.post
    flex-grow 1
    flexCenter()
    flex-direction column
    align-items flex-end
    background-color $brandAccent
    position relative
    overflow hidden
    
.post.small
    width calc(50% - 20px)
    height calc(50% - 10px)
    
.post.small:nth-child(-n+2)
    margin-bottom $blogPostMargin
    
.post.small:nth-child(odd)
    margin-right $blogPostMargin
        
.post.large
    justify-content flex-start
    width $full
    height $full
    margin 0

.infoWrapper
    flexCenter()
    flex-wrap wrap
    align-items flex-end
    background-color $brandPrimaryLight
    width $full
    height $blogInfoHeight
    position relative
    z-index 10
    i
        color $brandAccent
        padding 0 0.5rem
        
    .fa-heart-o
        font-weight 900
        
    .info
        flexCenter()
        flex-grow 1
        height $blogInfoHeight
        background-color $brandPrimaryLight
        
    .info:not(:last-child)
        border-right 1px solid $brandNeutral
        
.description
    flexCenter()
    flex-direction column
    align-items flex-start
    justify-content center
    flex-grow 1 
    background-color $brandPrimaryLight
    border-top 1px solid $brandNeutral
    p, h4, h5
        padding-left 2rem
    p
        color $brandDim
        line-height 1.8rem
        margin-bottom 0
    h4, h5
        text-align left
    h4
        font-weight 400
        text-transform none
    h5
        wideTitle()
        font-size $miniParagraph
        
a.imageWrapper
    position relative
    overflow hidden
    height $full
    width $full
    img
        position absolute
        height 115%
        width auto
        left 50%
        transform translateX(-50%)
        
.post.large a.imageWrapper
    height $half